<Window x:Class="Viatronix.Utilities.General.AdministerHostsTable.AttributeWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Modify Attribute" Background="LightSteelBlue" 
  Height="168" Width="393" ResizeMode="NoResize">
  <Grid>
    <Label Content="Name:" Foreground="DarkBlue" FontWeight="Bold" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" VerticalAlignment="Top" />
    <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TabIndex="0" Height="23" Margin="97,14,12,0" VerticalAlignment="Top" />

    <Label Content="Value:" Foreground="DarkBlue" FontWeight="Bold" Height="28" HorizontalAlignment="Left" Margin="12,54,0,0" VerticalAlignment="Top" />
    <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TabIndex="1" Height="23" Margin="97,56,12,0" VerticalAlignment="Top" />

    <Button Content="OK"     Click="OnOKClickHandler"     x:Name="m_okButton"     IsDefault="True" TabIndex="2" Foreground="DarkBlue" FontWeight="Bold" Height="23" HorizontalAlignment="Right" Margin="0,104,93,0" VerticalAlignment="Top" Width="75" />
    <Button Content="Cancel" Click="OnCancelClickHandler" x:Name="m_cancelButton" IsCancel="True"  TabIndex="3" Foreground="DarkBlue" FontWeight="Bold" Height="23" HorizontalAlignment="Right" Margin="0,104,12,0" VerticalAlignment="Top" Width="75" />
  </Grid>
</Window>
